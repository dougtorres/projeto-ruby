<div>
<% if flash[:alert] %>
<p id ="notice"> <%= flash[:alert] %> </p>
<% end %>
<%= form_tag do %>
<fieldset>
		<legend>Please Log in</legend>
		<div>
		<%= label_tag :name, 'Name' %>
		<%= text_field_tag :name, params[:name] %>
		<%= label_tag :password, 'Password' %>
		<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
		<%= submit_tag 'login' %>
		</div>
		<div>
		<%= link_to 'New User', new_user_path %>
        <div>
</fieldset>
<% end %>
</div>

